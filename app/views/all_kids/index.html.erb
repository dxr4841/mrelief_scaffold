<h1>Listing all_kids</h1>

<table>
  <thead>
    <tr>
      <th>Kids household size</th>
      <th>Assist gross income</th>
      <th>Share gross income</th>
      <th>Premium 1 gross income</th>
      <th>Premium 2 gross income</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @all_kids.each do |all_kid| %>
      <tr>
        <td><%= all_kid.kids_household_size %></td>
        <td><%= all_kid.assist_gross_income %></td>
        <td><%= all_kid.share_gross_income %></td>
        <td><%= all_kid.premium_1_gross_income %></td>
        <td><%= all_kid.premium_2_gross_income %></td>
        <td><%= link_to 'Show', all_kid %></td>
        <td><%= link_to 'Edit', edit_all_kid_path(all_kid) %></td>
        <td><%= link_to 'Destroy', all_kid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

