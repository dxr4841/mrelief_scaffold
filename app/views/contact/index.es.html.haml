.container
  .row
    .page-header
    = notice
    = alert
    .col-md-8.col-md-offset-2
      %h3.text-center= t.contact_us.we_would | "We would love to hear from you!"
      %br/
      = form_tag(contact_index_url) do
        .form-group
          = label_tag(:contact_first_name, I18n.t('contact_us.first_name', :default => "First Name"))
          = text_field_tag(:contact_first_name, nil, {:class => "form-control"})
        .form-group
          /
            <label for="contact_last_name">Last Name</label>
            <input type="text" class="form-control" style="max-width:350px" id="contact_last_name">
          = label_tag(:contact_last_name, I18n.t('contact_us.last_name', :default => "Last Name"))
          = text_field_tag(:contact_last_name, nil, {:class => "form-control"})
        .form-group
          /
            <label for="contact_email">Email</label>
            <input type="email" class="form-control" style="max-width:350px" id="contact_email">
          = label_tag(:contact_email, I18n.t('contact_us.email', :default => "Email"))
          = email_field_tag(:contact_email, nil, {:class => "form-control"})
        .form-group
          = label_tag(:advertising_title, I18n.t('contact_us.how_did', :default => "How did you hear about us?"))
          = select_tag(:advertising_options, options_for_select([[I18n.t('contact_us.none', :default => 'None'), 'None'], [I18n.t('contact_us.ads', :default => 'Advertisements'), 'Advertisements'], [I18n.t('contact_us.events', :default => 'At an event'), 'At an Event'], [I18n.t('contact_us.community', :default => 'Community service center'), 'Community Service Center'], [I18n.t('contact_us.someone_else', :default => 'From someone else'), 'From Someone Else'], [I18n.t('contact_us.internet_search', :default => 'Internet search'), 'Internet Search'], [I18n.t('contact_us.social_media', :default => 'Social media'), 'Social Media'], [I18n.t('contact_us.other', :default => 'Other'), 'Other']]), {:class => "form-control"})
        .form-group
          = label_tag(:request, I18n.t('contact_us.request', :default => "What is your request related to?"))
          = select_tag(:request, options_for_select([[I18n.t('contact_us.press', :default => 'Press'), 'Press'], [I18n.t('contact_us.grants', :default => 'Grants/Investment '), 'Grants/Investment '], [I18n.t('contact_us.feedback'), 'Feedback About the Site'], [I18n.t('contact_us.bug_or_problem', :default => 'A Bug or Problem you Had'), 'A Bug or Problem you Had'], [I18n.t('contact_us.something_else', :default => 'Something else'), 'Something Else']]), {:class => "form-control"})
        .form-group
          = label_tag(:feedback, I18n.t('contact_us.message', :default => "Your message"))
          = text_area_tag(:feedback, nil, {:class => "form-control", :rows => "5"})
        %div
          = submit_tag(I18n.t('contact_us.submit', :default => "Submit"), :class => "btn btn-primary")
  .divider
  %br/
  %br/
  %div
    %p.subhead Some ways to get in touch with us
  %div{:style => "padding-bottom:100px; text-align:center"}
    %a{:href => "mailto:mrelief.form@gmail.com"}
      %i.fa.fa-envelope-square{:style => "  margin:30px; font-size:72px"}
    %a{:href => "https://plus.google.com/117049110248209318421 "}
      %i.fa.fa-google-plus-square{:style => "  margin:30px; font-size:72px"}
    %a{:href => "https://twitter.com/mrelief_form"}
