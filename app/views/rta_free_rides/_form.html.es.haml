= form_for(@rta_free_ride) do |f|
  - if @rta_free_ride.errors.any?
    #error_explanation
      %h2
        = pluralize(@rta_free_ride.errors.count, "error")
        prohibited this rta_free_ride from being saved:
      %ul
        - @rta_free_ride.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :rta_dependent_no
    %br/
    = f.number_field :rta_dependent_no
  .field
    = f.label :rta_gross_income
    %br/
    = f.text_field :rta_gross_income
  .actions
    = f.submit
