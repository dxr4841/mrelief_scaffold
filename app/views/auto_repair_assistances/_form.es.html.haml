= form_for(@auto_repair_assistance) do |f|
  - if @auto_repair_assistance.errors.any?
    #error_explanation
      %h2
        = pluralize(@auto_repair_assistance.errors.count, "error")
        prohibited this auto_repair_assistance from being saved:
      %ul
        - @auto_repair_assistance.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :auto_household_size
    %br/
    = f.number_field :auto_household_size
  .field
    = f.label :auto_gross_income
    %br/
    = f.text_field :auto_gross_income
  .actions
    = f.submit
