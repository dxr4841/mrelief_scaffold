= form_for(@rental_assistance) do |f|
  - if @rental_assistance.errors.any?
    #error_explanation
      %h2
        = pluralize(@rental_assistance.errors.count, "error")
        prohibited this rental_assistance from being saved:
      %ul
        - @rental_assistance.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :rental_dependent_no
    %br/
    = f.number_field :rental_dependent_no
  .field
    = f.label :rental_gross_income
    %br/
    = f.text_field :rental_gross_income
  .field
    = f.label :rental_status
    %br/
    = f.number_field :rental_status
  .actions
    = f.submit
