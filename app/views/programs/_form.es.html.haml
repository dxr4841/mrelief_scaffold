= form_for(@program) do |f|
  - if @program.errors.any?
    #error_explanation
      %h2
        = pluralize(@program.errors.count, "error")
        prohibited this program from being saved:
      %ul
        - @program.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :category
    %br/
    = f.text_field :category
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :location
    %br/
    = f.text_field :location
  .actions
    = f.submit
